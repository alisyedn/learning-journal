// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Logs {
  id         Int     @id @default(autoincrement())
  slug       String  @unique
  title      String
  date       String
  image      String
  excerpt    String
  isFeatured Boolean
  tags       Tags[]
}

model Tags {
  id    Int    @id @default(autoincrement())
  label String
  log   Logs   @relation(fields: [logId], references: [id])
  logId Int
}
