{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays"
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "minor-and-patch",
      "automerge": true
    }
  ]
}