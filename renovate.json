{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "schedule": "at any time"
  },
  "ignoreUnstable": true,
  "stabilityDays": 7,
  "lockFileMaintenance": {
    "enabled": true
  },
  "fileRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "fileMatch": [
        "docker-compose.dev.yml"
      ],
      "automerge": true
    }
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "groupName": "Dependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "Dev Dependencies"
    }
  ]
}
